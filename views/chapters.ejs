<%- include('./partials/header.ejs') %>
<% if (locals.chapterData) { %>
<div class="chapterDetail">
  <div class="m-plus-1p-medium chapterDeatailHeading chapterNumber">
    Chapter - <%= chapterData.chapter_number%>
  </div>
  <div class="amita-regular chapterName"><%= chapterData.name %></div>
  <div class="m-plus-1p-medium chapterDeatailHeading chapterNameTranslated">
    <%= chapterData.name_transliterated%>
  </div>
</div>
<h2 class="chapterHeading m-plus-1p-medium">Chapter Summary</h2>
<div class="chapterSummaryDiv">
  <div class="chapterSummary">
    <div class="langTabDiv">
      <a href="/chapters/<%= chapterData.chapter_number %>/hindi"
        >
        <div class="anek-devanagari hindi langTab <% if (locals.language == "hindi") { %>
         <%= "choosen" %>
        <% } %>">
          हिन्दी
        </div>
        </a>
      <a href="/chapters/<%= chapterData.chapter_number %>/english"
        ><div class="m-plus-1p-medium english langTab <% if (locals.language == "english") { %>
         <%= "choosen" %>
        <% } %>">English</div></a
      >
    </div>

    <div>
      <% if (locals.language == "hindi") { %>
      <div class="anek-devanagari hindiSummary summaryTab">
        <%= chapterData.chapter_summary_hindi %>
      </div>
      <% } %> <% if (locals.language == "english") { %>
      <div class="m-plus-1p-medium englishSumary summaryTab">
        <%= chapterData.chapter_summary %>
      </div>
      <% } %>
    </div>
    <div class="buttonsContainer">
      <div class="buttonsDiv">
        <% if (chapterData.chapter_number > 1) { %>
          <div class="previous"><a href="/chapters/<%= chapterData.chapter_number - 1 %>/<%= language %>" class="noDecoration"><div class="button ubuntu-condensed-regular"><span class="material-symbols-outlined">
            arrow_back
            </span>Prev</div></a>
          </div>
        <% } %>
        <% if (chapterData.chapter_number <18) { %>
          <div class="next">
            <a href="/chapters/<%= chapterData.chapter_number +1 %>/<%= language %>" class="noDecoration"><div class="button next ubuntu-condensed-regular">Next <span class="material-symbols-outlined">
              arrow_forward
            </span></div></a>
          </div>
          <% } %>
      </div>
    </div>
  </div>
</div>
<div class="versesContainer">
    <h3 class="chapterHeading m-plus-1p-medium verseHeading1">Read Verse</h3>
    <h4 class="chapterHeading m-plus-1p-medium verseHeading2">Pick a language</h4>
    <div class="langTabDiv verseTabDiv ">
      <a href="/verse/<%=chapterData.chapter_number%>/1/hindi/<%= chapterData.verses_count%>">
        <div class="anek-devanagari hindi langTab hindiVerse">हिन्दी</div>
      </a>
      <a href="/verse/<%=chapterData.chapter_number%>/1/english/<%= chapterData.verses_count%>">
        <div class="m-plus-1p-medium english langTab englishVerse">English</div>
      </a>
    </div>
</div>
<% } else { %>

  <div class="chapterDetail">
    <img src="/images/krishnaPngOrignal.jpeg" alt="Krishna Image" class="authorPhoto webImage chapterWebImage">
    <div class="verseTab amita-regular orange ">।। श्री कृष्ण सदा सहायते ।।</div>
    <h2 class="chapterHeading m-plus-1p-medium verseHeading1">Search Chapters</h2>
    <h4 class="chapterHeading m-plus-1p-medium verseHeading2">Search By Number</h4>
  </div>
  <div class="searchBar">
    <div class="search chapterSearch">
      <form action="/searchChapter" method="post">
        <input type="text" class="searchInput m-plus-1p-medium" placeholder="Search" name="chapterNumber" required>
        <select name="language" class="languageSearch" required>
          <option value="english">English</option>
          <option value="hindi">हिन्दी</option>
        </select>
        <input type="submit" class="searchSubmit m-plus-1p-medium chapterSubmit" value="Go">
      </form>
    </div>
  </div>
  <% } %>
<script src="/js/app.js"></script>
 <%- include('./partials/footer.ejs') %>
