<%- include('./partials/header.ejs') %>
<div class="quoteBox">
  <h2 class="quote ubuntu-condensed-regular">
    “Man is made by his belief. As he believes, so he is.”<br />
    <div class="quoteWriterB amita-regular orange">- भागवद गीता</div>
  </h2>
</div>

<div class="quoteBox">
  <h2 class="quote ubuntu-condensed-regular">
    "Whenever dharma declines and the purpose of life is
    <span class="orange">forgotten</span>, I manifest myself on earth. I am born
    in every age to protect the <span class="orange">good</span>, to destroy
    evil, and to reestablish <span class="orange">dharma</span>."<br />
    <div class="quoteWriter amita-regular orange">- माधव</div>
  </h2>
</div>
<div class="chapterDiv">
  <div class="chapterHeading m-plus-1p-medium">Chapter Summary</div>
  <div class="chapterImagesContainer">
    <ul class="imageBox">
      <% for( let index = 1; index < 19; index++ ) { %>
        <li class="chapterImageDiv">
          <a href="/chapters/<%= index %>/hindi" class="chapterLink">
            <div class="chapterImg">
              <div class="innerImgDiv">
                <img src="./images/logo.png" alt="Logo" class="innerLogoImg" />
                <div class="innerHeading amatic-sc-bold">Madhav</div>
                <div class="innerChapterNumber amatic-sc-bold"><%= index %></div>
                <div class="innerChapterSummary shadows-into-light-regular">
                  Chapter Summary
                </div>
              </div>
            </div>
          </a>
        </li>
      <% } %>
    </ul>
    <div class="scrollBar">
      <input
        type="range"
        name="slideBar"
        id="slideBar"
        min="1"
        max="100"
        value="1"
        class="slider"
      />
    </div>
  </div>
</div>
<script src="/js/app.js"></script>
<%- include('./partials/footer.ejs') %>
